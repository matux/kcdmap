{
  "name": "kingdomcomemap",
  "version": "0.0.2",
  "description": "Interactive Map Application for Kingdom Come: Deliverance",
  "author": "ahmetcanisik <can.isik.business@gmail.com> (https://ahmetcanisik.com)",
  "main": "main.js",
  "license": "MIT",
  "keywords": [
    "kingdom come deliverance online",
    "kcd",
    "kcdmap",
    "kcdmap online",
    "kingdom come",
    "kingdom come map",
    "interactive map",
    "kcd interactive",
    "kcd interactive map"
  ],
  "homepage": "https://github.com/ahmetcanisik/kingdomcomemap-desktop/",
  "bugs": {
    "url": "https://github.com/ahmetcanisik/kingdomcomemap-desktop/issues"
  },
  "browserslist": [],
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "format": "prettier --write '**/*.js'",
    "lint": "eslint '**/*.js' --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "prettier": "^3.3.3"
  },
  "build": {
    "productName": "Kingom Come Map",
    "appId": "com.ahmetcanisik.kingdomcomemap",
    "asar": false,
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "icon": "./app/icons/win/icon.ico"
    },
    "linux": {
      "target": [
        "deb",
        "rpm"
      ],
      "icon": "./app/icons/png/256x256.png",
      "category": "Games"
    }
  }
}
